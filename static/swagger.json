{
    "openapi": "3.0.0",
    "info": {
      "description": "REST API for a simple application which checks if a word is a palindrome..",
      "version": "1.0.0",
      "title": "Palindrome REST API",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "tags": [
      {
        "name": "Palindrome",
        "description": "API that manages CRUD operation on messages"
      }
    ],
    "servers": [
      {
        "url": "/api/v1"
      }
    ],
    "components": {
      "schemas": {
        "PalindromeCreateDTO": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            }
          }
        },
        "PalindromeResponseDTO":{
          "type":"object",
          "properties":{
            "message": {
              "type":"string"
            },
            "message_id":{
              "type":"string"
            },
            "isPalindrome":{
              "type":"boolean"
            }
          }
        },
        "message_id": {
          "type": "string"
        }
      }
    },
    "paths": {
      "/messages": {
        "post": {
          "tags": ["Palindrome"],
          "summary": "Post new item to the inventory",
          "requestBody": {
            "description": "Post new item to the inventory",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inventory_item"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/PalindromeResponseDTO"
                  }
                }
              }
            },
            "404": {
              "description": "NOT FOUND",
              "schema": {
                "$ref": "#/components/schemas/inventory_item"
              }
            }
          }
        },
        "get": {
          "tags": ["Palindrome"],
          "summary": "Get all items from the inventory",
  
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/PalindromeResponseDTO"
                  }
                }
              }
            },
            "404": {
              "description": "NOT FOUND",
              "schema": {
                "$ref": "#/components/schemas/inventory_item"
              }
            }
          }
        }
      },
      "/messages/{message_id}": {
        "get": {
          "tags": ["Palindrome"],
          "summary": "Get an item from the inventory ",
          "parameters": [
            {
              "name": "item_id",
              "in": "path",
              "description": "Id of the item",
              "required": true,
              "type": "string",
              "schema": {
                "$ref": "#/components/schemas/item_id"
              }
            }
          ],
  
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/PalindromeResponseDTO"
                  }
                }
              }
            },
            "404": {
              "description": "NOT FOUND",
              "schema": {
                "$ref": "#/components/schemas/inventory_item"
              }
            }
          }
        },
        "put": {
          "tags": ["Palindrome"],
          "summary": "Update a message",
          "description": "The API endpoint is responsible for updating a message based on the message_id and the message. Upon accessing the endpoint the specified message with the message_id mentioned is updated if found and if not found an error is thrown.",
          "parameters": [
            {
              "name": "message_id",
              "in": "path",
              "description": "Id of the message",
              "required": true,
              "type": "string",
              "schema": {
                "$ref": "#/components/schemas/message_id"
              }
            }
          ],
          "requestBody": {
            "description": "Update an existing message in the system",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PalindromeCreateDTO"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/PalindromeResponseDTO"
                  }
                }
              }
            },
            "404": {
              "description": "NOT FOUND"
            }
          }
        },
        "delete": {
          "tags": ["Palindrome"],
          "summary": "Delete message by message_id",
          "description":"The API endpoint is responsible for deleting a message based on the message_id provided in the path. Upon accessing the endpoint the specified message with the message_id mentioned is deleted if found and if not found an error is thrown.",
          "parameters": [
            {
              "name": "message_id",
              "in": "path",
              "description": "Id of the message",
              "required": true,
              "type": "string",
              "schema": {
                "$ref": "#/components/schemas/message_id"
              }
            }
          ],
  
          "responses": {
            "200": {
              "description": "Success response states that the message was found and deleted from the system.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "This error is thrown when the message_id is not found in the system"
            },
            "500": {
              "description": "This error is thrown when there is an issue with database connectivity or server"
            }
          }
        }
      }
    }
  }